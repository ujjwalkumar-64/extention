{
  "manifest_version": 3,
  "name": "PageGenie",
  "version": "1.0.1",
  "description": "AI tools for any web page.",
  "action": {
    "default_title": "PageGenie",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://pagegenie-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content.js",
        "content/toast.js"
      ],
      "css": [
        "content/toolbar.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "summarize-selection": {
      "suggested_key": { "default": "Alt+Shift+S" },
      "description": "Summarize current selection (or confirm full page)"
    },
    "explain-selection": {
      "suggested_key": { "default": "Alt+Shift+E" },
      "description": "Explain current selection (or confirm full page)"
    },
    "rewrite-selection": {
      "suggested_key": { "default": "Alt+Shift+R" },
      "description": "Rewrite current selection (or confirm full page)"
    },
    "translate-selection": {
      "suggested_key": { "default": "Alt+Shift+T" },
      "description": "Translate current selection (or confirm full page)"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/pageBridge.js",
        "pages/reader.html",
        "pages/reader.js",
        "pages/reader.css",
        "pages/reading.html",
        "pages/reading.js",
        "pages/reading.css",
        "pages/onboarding.html",
        "pages/onboarding.js",
        "pages/onboarding.css",
        "libs/pdfjs/pdf.min.mjs",
        "libs/pdfjs/pdf.worker.min.mjs",
        "quiz/quiz.html"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; connect-src 'self' https://pagegenie-backend.onrender.com;"
  }
}